#!/usr/bin/env bash

function indent() {
	c='s/^/       /'
	case $(uname) in
		Darwin) sed -l "$c";;
		*)      sed -u "$c";;
	esac
}

BUILD_DIR="$1"
SOURCE_DIR="$(dirname $0)/../Devanagari_new.ttf"
TARGET_DIR="$BUILD_DIR/.fonts"

echo "-----> Extracting fonts to $TARGET_DIR"

mkdir -p "$TARGET_DIR"
mv "$SOURCE_DIR" "$TARGET_DIR" | indent